<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ChangePasswordController">
   <children>
      <VBox alignment="CENTER" layoutX="153.0" layoutY="47.0" prefHeight="307.0" prefWidth="294.0" spacing="15.0" styleClass="details-card" stylesheets="@styles.css">
         <children>
            <Label styleClass="details-title" text="Change Password" />
            <PasswordField promptText="Current Password" styleClass="modern-input" />
            <PasswordField promptText="New Password" styleClass="modern-input" />
            <PasswordField promptText="Confirm New Password" styleClass="modern-input" />
            <HBox prefHeight="100.0" prefWidth="200.0" styleClass="popup-buttons">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleUpdate" styleClass="modern-button-blue" text="Update" />
                  <Button mnemonicParsing="false" onAction="#handleCancel" styleClass="modern-button-gray" text="Cancel" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
